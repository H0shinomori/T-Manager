<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TextView para el título -->
        <TextView
            android:id="@+id/tituloTextViewPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título del Ticket"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- TextView para la prioridad -->
        <TextView
            android:id="@+id/prioridadTextViewPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prioridad: Alta"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="16dp"/>

        <!-- ScrollView para la descripción -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/descripcionTextViewPreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción detallada del Ticket..."
                android:textSize="16sp"/>
        </ScrollView>

        <!-- ImageView para las imágenes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewPreview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/imageViewPreview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>